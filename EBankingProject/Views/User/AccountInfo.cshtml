@model EBankingProject.Models.Account
@{
    ViewBag.Title = "AccountInfo";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<h4 class="mt-4">AccountInfo</h4>


<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 ">

        <div class="form-group">
            <table class="table table-active">
                <tr>
                    <th><h5>Customer Name: <span style="margin-left:20px">@Model.Customer.firstName</span></h5></th>
                </tr>
            </table>
        </div>

    </div>


</div>

<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 ">

        <div class="form-group">
            <table class="table table-active">
                <tr>
                    <th><h5>Account Number: <span style="margin-left:20px">@Model.AccountNO</span></h5></th>
                </tr>
            </table>
        </div>

    </div>


</div>

<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 ">

        <div class="form-group">
            <table class="table table-active">
                <tr>

                    <th><h5>Balance: <span style="margin-left:20px">@Model.Balance</span></h5></th>
                </tr>
            </table>
        </div>

    </div>


</div>
